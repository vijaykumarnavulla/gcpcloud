steps:
- name: 'gcr.io/cloud-builders/docker'
  args: ['build', '-t', 'gcr.io/$PROJECT_ID/my-app', '.']
- name: 'gcr.io/cloud-builders/docker'
  args: ['push', 'gcr.io/$PROJECT_ID/my-app']
- name: 'gcr.io/google.com/cloudsdktool/gcloud'
  args:
  - 'run'
  - 'deploy'
  - 'my-app'
  - '--image=gcr.io/$PROJECT_ID/my-app'
  - '--region=us-central1'
  - '--platform=managed'
  - '--allow-unauthenticated'
